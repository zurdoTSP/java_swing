    private void jLabel3MousePressed(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_jLabel3MousePressed
        // TODO add your handling code here:
        if(encendido==0)
        {
         PC.setIcon(a);
         encendido=1;
        }
        else
        {
            PC.setIcon(b);
            encendido=0;
        }
    }//GEN-LAST:event_jLabel3MousePressed

    private void PCMouseEntered(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_PCMouseEntered
        // TODO add your handling code here:

       // PC.setToolTipText( "<html><img src=\""+getClass().getResource("/imagen/Icon_pcp.png")+"\"><p>holiiii<p></html>" );
        PC.setToolTipText( "<html><BODY BGCOLOR=\"#CCEEFF \"><h2><IMG SRC=\""+getClass().getResource("/imagen/original.png")+"\" ALIGN=\"left\">Intel Core i7-6700 3.4GHz Box</h2></BODY>\n" +
"</html>" );
    }//GEN-LAST:event_PCMouseEntered

